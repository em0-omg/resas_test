{
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest",
    "^.+\\.(css|scss)$": "jest-transform-stub"
  },
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "testEnvironment": "jest-environment-jsdom",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "moduleNameMapper": {
    "\\.(css|scss)$": "<rootDir>/node_modules/jest-css-modules"
  }
}
